@page
@model WebApplicationHotel5.Pages.Admin.IndexModel
@{
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
          integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

</head>

<body>
    <h1> Veuillez-vous authentifier!</h1>

    <form method="post">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" name="username">
            <label for="floatingInput">Login</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" name="password">
            <label for="floatingInput">Password</label>
        </div>
        <br />
        <br />
        <button>Se connecter </button>
    </form>
    <br />
    <br />

    @if (Model.isauthentified) {   
        <form >
            <h1>Voulez-vous modifier la table des chambres ou celle des invités</h1>
            <div class="d-grid gap-2 d-md-block">
                <a href="/Admin/Chambre" class="btn btn-primary btn-lg active" role="button" onclick="Chambrebutton()">
                    Modifier la table Chambre
                </a>              

                <a class="btn btn-primary btn-lg active" role="button" href="/Admin/Invite">
                    Modifier la table Invité
                </a>
            </div>
        </form>
        
    }
</body>
